        <label>Setting Activated</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Trigger_Names__c</fullName>
        <description>Name(s) of the trigger affected by the setting. Multiple triggers can be entered, delimit with a semi-colon</description>
        <externalId>false</externalId>
